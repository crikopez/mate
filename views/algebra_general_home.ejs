                        'pulse-custom': 'pulse 1.5s cubic-bezier(0.4, 0, 0.6, 1) infinite',
                        'progress-bar': 'progressBar 1.5s ease-out forwards',
                        'bounce-in': 'bounceIn 0.8s ease-out forwards',
                        'scale-up': 'scaleUp 0.5s ease-out forwards',
